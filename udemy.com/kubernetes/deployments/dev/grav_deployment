#namespace.yaml
# The Namespace
kind: Namespace
apiVersion: v1
metadata:
  name: grav-test
  labels:
    name: grav-test
---
#pv-pvc.yaml
apiVersion: v1
kind: PersistentVolume
metadata:
  name: gravpv
  namespace: grav-test
  labels:
    type: local
spec:
  capacity:
    storage: 1Gi
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: "/mnt/grav-test"
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: gravpvc
  namespace: grav-test
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
---
#grav-test-svc.yaml
apiVersion: v1
kind: Service
metadata:
  name: grav-test-svc
  namespace: grav-test
  labels:
    app: grav-test-svc
    app.kubernetes.io/instance: grav-test-svc
spec:
  type: NodePort
  ports:
  - port: 80
    targetPort: 80
    protocol: TCP
    name: http
    nodePort: 30080
  selector:
    app: grav
---
#deploy.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: grav
  namespace: grav-test
  labels:
    app: grav
spec:
  replicas: 1
  selector:
    matchLabels:
      app: grav
  template:
    metadata:
      labels:
        app: grav
    spec:
      containers:
      - name: grav
        image: lscr.io/linuxserver/grav:latest
        ports:
        - containerPort: 80
          name: http
        env:
        - name: PUID
          value: "1001"
        - name: PGID
          value: "1001"
        - name: TZ
          value: "Europe/Amsterdam"
        volumeMounts:
        - mountPath: "/config"
          name: bookstackvolume
      volumes:
      - name: bookstackvolume
        persistentVolumeClaim:
          claimName: gravpvc
